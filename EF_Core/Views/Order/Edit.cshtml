@model EF_Core.Domain.Entities.Order

@{
    ViewData["Title"] = "Create/Edit";
}

<h1>@ViewData["Title"]</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Order" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="ord_id" />
                <input type="hidden" asp-for="ord_id" />
                <div asp-validation-summary="All"></div>
            </div>
            <div class="form-group">
                <label asp-for="ord_datetime" class="control-label">Date of order</label>
                <input type="datetime" asp-for="ord_datetime" class="form-control" />
                <span asp-validation-for="ord_datetime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ord_an" class="control-label">Type of analysis</label>
                <input asp-for="ord_an" class="form-control" />
                <span asp-validation-for="ord_an" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create/Modify" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>